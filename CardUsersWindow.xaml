        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Margin="10" Name="fioUsersTblok"/>
            
            <TextBlock Margin="10" Name="RoleUserTblok"/>
            <TextBlock Margin="10" Name="PhoneUserTblok"/>
            <TextBlock Margin="10" Name="EmailTblok"/>
            <TextBlock Margin="10" Name="DepartmentTblok"/>
            <TextBlock Margin="10" Name="Status_Tblok"/>
            <TextBlock Margin="10" Name="PostTblok"/>
            <TextBlock Margin="10" Name="LoginTblok"/>
            <Button Content="Уволить" Margin="10" Name="DelitBtn" Click="DelitBtn_Click"/>
            <Button Content="Трудозатраты" Margin="10" Name="laborcostsBtn" Click="laborcostsBtn_Click"/>
            <Button Content="Сбросить пароль" Margin="10" Name="newPussBTN" Click="newPussBTN_Click"/>
        </StackPanel>


        <Button Content="Назад" Grid.Row="1" Margin="200,10,200,10" Click="Button_Click"/>
    </Grid>
</Window>
